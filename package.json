{
  "name": "stats.gallery",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run serve",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "build:ssr-client": "vue-cli-service build --dest dist/client --mode development",
    "build:ssr-server": "cross-env SSR=1 vue-cli-service build --dest dist/ssr --mode development",
    "build:ssr": "npm run build:ssr-server && npm run build:ssr-client",
    "serve:ssr": "cross-env DOTENV_CONFIG_PATH=./.env.development node -r dotenv/config ./server.js",
    "prod:build:ssr-client": "vue-cli-service build --dest dist/client",
    "prod:build:ssr-server": "cross-env SSR=1 vue-cli-service build --dest dist/ssr",
    "prod:build:ssr": "npm run prod:build:ssr-server && npm run prod:build:ssr-client",
    "prod:serve:ssr": "node -r dotenv/config ./server.js"
  },
  "dependencies": {
    "@headlessui/vue": "^1.4.2",
    "@koa/router": "^10.1.1",
    "@vue/server-renderer": "^3.2.26",
    "@webassemblyjs/wasm-parser": "^1.9.0",
    "axios": "^0.21.1",
    "big.js": "^5.2.2",
    "buffer": "^6.0.3",
    "clipboard-copy": "^4.0.1",
    "core-js": "^3.6.5",
    "dotenv": "^8.6.0",
    "heroicons-vue3": "^1.0.1",
    "highcharts": "^9.2.2",
    "idb": "^6.1.2",
    "koa": "^2.13.1",
    "koa-static": "^5.0.0",
    "luxon": "^1.27.0",
    "near-api-js": "^0.44.1",
    "near-contract-parser": "^0.1.2",
    "vue": "^3.2.26",
    "vue-class-component": "^8.0.0-0",
    "vue-router": "^4.0.0-0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.0",
    "@types/axios": "^0.14.0",
    "@types/big.js": "^6.1.1",
    "@types/koa": "^2.13.4",
    "@types/koa__router": "^8.0.7",
    "@types/luxon": "^1.27.0",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@vue/cli-plugin-babel": "^5.0.0-rc.1",
    "@vue/cli-plugin-eslint": "^5.0.0-rc.1",
    "@vue/cli-plugin-router": "^5.0.0-rc.1",
    "@vue/cli-plugin-typescript": "^5.0.0-rc.1",
    "@vue/cli-service": "^5.0.0-rc.1",
    "@vue/compiler-sfc": "^3.2.26",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "autoprefixer": "^10.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.5.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.0.0",
    "lint-staged": "^9.5.0",
    "postcss": "^8.4.5",
    "prettier": "^2.2.1",
    "sass": "^1.34.1",
    "sass-loader": "^12.1.0",
    "stylus": "^0.54.7",
    "stylus-loader": "^3.0.2",
    "tailwindcss": "^3.0.5",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-manifest-plugin": "^4.0.2",
    "webpack-node-externals": "^3.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript/recommended",
      "@vue/prettier",
      "@vue/prettier/@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.{rs}": [
      "cargo fmt",
      "git add"
    ]
  }
}
